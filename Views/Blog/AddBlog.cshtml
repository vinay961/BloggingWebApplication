@model BloggingWebApplication.Models.BlogModel

@{
    ViewData["Title"] = "Add Blog";
}

<div class="container mt-5">
    <h2 class="mb-4">Create a New Blog Post</h2>

    <form asp-action="AddBlog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label fw-bold">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter Blog Title" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Content</label>
            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your blog content..." required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Upload Image</label>
            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" required>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Blog</button>
    </form>
</div>
