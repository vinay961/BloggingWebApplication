@model List<BloggingWebApplication.Models.BlogModel>

<div class="container my-5">
    <h1 class="text-center mb-4 text-primary">Welcome to the Blogging Platform</h1>

    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-dark fw-bold">@blog.Title</h5>
                        <p class="card-text text-muted">@blog.Content.Substring(0, Math.Min(blog.Content.Length, 100))...</p>
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-primary btn-sm">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
